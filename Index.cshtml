@model IEnumerable<User>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">User Id</th>
            <th scope="col">User FirstName</th>
            <th scope="col">User LastName</th>
            <th scope="col">User Email</th>
            <th scope="col">User Password</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.Id</th>
                <th scope="col">@item.FirstName</th>
                <th scope="col">@item.LastName</th>
                <th scope="col">
                    <a asp-controller="User" asp-action="ViewDetails" asp-route-id="@item.Id" class="btn btn-primary mx-2">View</a>
                    <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-2">Edit</a>
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="User" asp-action="Create" class="btn btn-success">Add User</a>
    </tfoot>
</table>